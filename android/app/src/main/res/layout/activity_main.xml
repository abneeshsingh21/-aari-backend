<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Header Bar -->
    <LinearLayout
        android:id="@+id/headerBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/background_dark"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/menuIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_more"
            android:contentDescription="Menu" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŽ¤ AARI"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:gravity="center" />

        <ImageView
            android:id="@+id/settingsIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:contentDescription="Settings" />
    </LinearLayout>

    <!-- Main Content Area -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerBar"
        android:layout_above="@id/controlPanel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Conversation Area -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/conversationRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:visibility="visible" />

            <!-- Quick Commands Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quick Commands"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="12dp" />

                <!-- Commands Grid -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:layout_margin="8dp">

                    <Button
                        android:id="@+id/commandSendMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ’¬ Send Message"
                        android:textSize="12sp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp"
                        android:padding="12dp"
                        android:backgroundTint="@color/command_blue" />

                    <Button
                        android:id="@+id/commandMakeCall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ž Call"
                        android:textSize="12sp"
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp"
                        android:padding="12dp"
                        android:backgroundTint="@color/command_green" />

                    <Button
                        android:id="@+id/commandPlayMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽµ Play Music"
                        android:textSize="12sp"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp"
                        android:padding="12dp"
                        android:backgroundTint="@color/command_purple" />

                    <Button
                        android:id="@+id/commandSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ” Search"
                        android:textSize="12sp"
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp"
                        android:padding="12dp"
                        android:backgroundTint="@color/command_orange" />

                    <Button
                        android:id="@+id/commandReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”” Reminder"
                        android:textSize="12sp"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp"
                        android:padding="12dp"
                        android:backgroundTint="@color/command_red" />

                    <Button
                        android:id="@+id/commandEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“§ Send Email"
                        android:textSize="12sp"
                        android:layout_row="2"
                        android:layout_column="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="fill_horizontal"
                        android:layout_margin="4dp"
                        android:padding="12dp"
                        android:backgroundTint="@color/command_teal" />

                </GridLayout>

            </LinearLayout>

            <!-- Status Display -->
            <TextView
                android:id="@+id/statusTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ready to listen..."
                android:textSize="16sp"
                android:textColor="@color/secondary_text"
                android:gravity="center"
                android:padding="16dp"
                android:background="@drawable/status_rounded"
                android:elevation="2dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Control Panel at Bottom -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/background_dark"
        android:elevation="8dp">

        <!-- Voice Button (Large Circular) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/voiceButton"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@android:drawable/ic_btn_speak_now"
                app:fabSize="auto"
                android:backgroundTint="@color/primary" />

        </FrameLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/startButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                android:text="â–¶ Start"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/success_green" />

            <Button
                android:id="@+id/stopButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                android:text="â¹ Stop"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/danger_red" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
